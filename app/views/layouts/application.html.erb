    </ul>
    <ul class="nav navbar-nav" style="float:right">
    <% if session[:user_id] %>
    <li style="float:right;"><%= link_to t('logout'), '/logout',{:style=>'font-size:18px;float:right;color:white;', :class => ""} %></li>
    <% else %>
    <li><button type="button" style="margin-top:2px;" class="btn btn-default btn-lg" data-toggle="modal" data-target="#myModal"><%= t 'login' %></button></li>
    <% end %>
    </ul>
  </div>
</nav>
  <div> 
      <%=  yield  %>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog" style="margin-top:10%">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header" style="background-color:springgreen">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= t 'login' %></h4>
        </div>
        <div class="modal-body">
          <% provide(:title, "Log in") %>
          
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <%= form_tag("/login", method: "post") do %>
          
                <input type="hidden" name="fullpath" value="<%= session[:fullpath] %>">
                <div class="form-group">
                <%=label_tag t 'email' %>
                  <input type="text" name="email" class="form-control">
                </div>
                <div class="form-group">
                <%=label_tag t 'pw' %>
                  <input type="password" name="password" class="form-control">
                </div>
                <div style="text-align:center;" class="form-group">
                  <%=submit_tag(t 'login',class: "btn btn-primary form-control")   %> 
                  <%  end  %>
                  
                </div>
            </div>
          </div>
          
        </div>
       
      </div>
      
    </div>
  </div>
  
</div>
