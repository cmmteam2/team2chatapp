<div id="bg" style="background-image:url('images/bg.jpg');background-position:center;font-size:18px;background-size:cover;width:100%;height:100%;position:fixed;top:0;bottom:0;left:0;right:0;z-index:999;overflow:scroll;padding:10px;">
    <div style="margin:4%;background-color:white;box-shadow:4px 4px 12px black;padding:10px;">
        <h3><%=t('workspaces')%></h3>
        <table class="table table-striped">
            <tr style="padding:3px;background-color:#f2f2f2;">
                <th><%=t('no')%></th>
                <th><%=t('name')%></th>
                
            </tr>
            <% i = 0 %>
            <% @workspace.each do |w| %>
           
                <% i+= 1 %>    
                    <tr style="background-color:white;color:black;">
                        <td><%= i %></td>
                        <td><%= w.name %></td>
                        

                    </tr>
            <% end %>
        </table>
        <a href="/"><input type="button" class="btn btn-control" value="<%=t('back')%>" ></a>
    </div>
    
</div>