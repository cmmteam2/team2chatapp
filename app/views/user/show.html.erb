<head>
    <style>
   input[type=text],input[type=password],input[type=file]{
        border-radius: 10px;
        height: 40px;
   }
   input[type=submit]{
    height: 40px;
    font-size: 20px;
   }
    body,html{
        width:100%;
        height:100%;
        background-color:#f2f2f2;
    }
    td{
      font-size:18px;

    }
    #favouritemsgbox{
      
      height:1px;
      overflow:hidden;
    }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>

</head>
<body>
<% if session[:user_id] %>
  <%= render template:"home/sidenav" %>
  

  <div style="background-color:grey;position:absolute;right:0;left:0;top:0;bottom:0;padding-left:351px;">
    <div style="width:100%;height:100%;background-color:#f2f2f2;color:red;font-size:20px;padding:2% 3%;">
        <div class="" style="height: 100%;background-color: white;box-shadow: 4px 4px 8px black;padding:2%;">
            <h3 style="color:black">User Profile</h3>
            <% if @user.file.nil? %>
                    
            <% else %>
                    <%= image_tag(@user.file,style:"width:150px;") %>
            <% end %>
            <div style="padding: 10px;">
                <%= form_with(model: @user, local: true,url: "/show",method: "post") do |form| %>
                    <div class="form-group">
                        <label style="color:black;">Name</label>
                        <input type="text" class="form-control" name="name" value="<%= @user.name %>">
                    </div>
                    <div class="form-group">
                        <label style="color:black;">Email</label>
                        <input type="text" class="form-control" name="email" value="<%= @user.email %>">
                    </div>
                    
                    <div class="form-group">
                        <label style="color:black;">Password</label>
                        <input type="password" class="form-control" name="password" >
                    </div>
                    
                    <div class="form-group">
                        <label style="color:black;">Confirm Password</label>
                        <input type="password" class="form-control" name="confirmpassword">
                    </div>

                    <div class="field">
                        <%= form.label :file,style:"color:black" %>
                        <%= form.file_field :file,name: "file", required:"required" %>
                    </div>
                    
                    <div class="form-group">
                        
                        <input type="submit" class="form-control btn btn-success" name="submit" value="SAVE">
                    </div>
                    
                <% end %>
            </div>
        </div>

    <% if session[:user]["role"] == 1 or @isadmin.nil? %>
            

    <% end %>

   
        


    </div>
  </div>


<% else %>

<% end %>

</body>