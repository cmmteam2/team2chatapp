<div id="bg" style="background-image:url('images/bg.jpg');background-position:center;font-size:18px;background-size:cover;width:100%;height:100%;position:fixed;top:0;bottom:0;left:0;right:0;z-index:999;">
    <div style="margin:4%;background-color:white;box-shadow:4px 4px 12px black;padding:10px;">
        
        <h3><%=t('users')%></h3>
        <table class="table" style="padding:1%" >
          <tr>
          <th><%=t('no')%></th>
          <th><%=t('name')%></th>
          <th><%=t('email')%></th>
          <th><%=t('role')%></th>
          
          </tr>
          <% i = 0 %>
          <% @users.each do |user| %>
            <% i += 1 %>
            <tr>
                <td><%= i %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                <% if user.role.nil? or user.role == 0 %>
                
                <% else %>
                <i class="fa fa-user" style="font-size:18px;"></i>&nbsp<span style="font-size:18px;font-weight:bold"><%=t ('admin')%></span>
                <% end %>
                </td>
                
            </tr>
            
          <% end %>
          
          </table>
        <a href="/"><input type="button" class="btn btn-control" value="<%=t('back')%>" ></a>
    
    </div>
    
</div>